doctype html
html
  head
    link(rel='stylesheet' href='https://unpkg.com/purecss@2.0.3/build/pure-min.css' integrity='' crossorigin='anonymous')
    title Book Store
    style
      include style.css
  body
    a(href='/' + loginInfo) Home
    br
    if !admin && loginInfo
      div Welcome 
        a(href='/profile/' + id + loginInfo) #{username}
        br
        a(href='/cart' + loginInfo) Cart
      br
    else if loginInfo
      div Welcome #{username}
      br
        
    if path != '/login' && !loginInfo
      a(href='/login' + loginInfo) Login
    else if path != '/login'
      a(href='/') Logout
    
    if path != '/register' && !loginInfo
      | 
      a(href='/register') Register
      
    block content
    
    if page
      br
      if page > 1
      a(href=path + `/../${parseInt(page)-1}` + loginInfo) < 
      a Page #{page} 
      a(href=path + `/../${parseInt(page)+1}` + loginInfo) >
    
    br
    hr
    footer
      p CSE412&copy; 2020
